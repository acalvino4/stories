<div class="contact-main">
    <div class="container">
        <div class='content'>
            <h1>Get the latest updates from Stories</h1>
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <%= form_with(url: '/signups', method: 'post', class: 'new_signup') do %>
                        <div class="form-group">
                            <%= label_tag('signup[firstname]', "First name") %>
                            <%= text_field_tag('signup[firstname]', nil, class: 'form-control') %>
                        </div>
                        <div class="form-group">
                            <%= label_tag('signup[email]', "Email") %>
                            <%= text_field_tag('signup[email]', nil, class: 'form-control') %>
                        </div>
                        <%= submit_tag("Join", class: "btn btn-default") %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
